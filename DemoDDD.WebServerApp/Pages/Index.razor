@page "/"
@inject IConfiguration _config
<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>
<p class="h4">
    Default Api Url: @connectionStrApi
</p>

@code{
    private string connectionStrApi = "";
    protected override Task OnInitializedAsync()
    {
        connectionStrApi = _config.GetConnectionString("StrApi") ?? "unknown";
        return Task.CompletedTask;
    }
}